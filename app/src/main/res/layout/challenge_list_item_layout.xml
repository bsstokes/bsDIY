<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp">

    <ImageView
        android:id="@+id/hero_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/challenge"
        app:layout_constraintDimensionRatio="W,2:3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_explore"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/challenge_scrim"
        app:layout_constraintBottom_toBottomOf="@+id/hero_image_view"
        app:layout_constraintLeft_toLeftOf="@+id/hero_image_view"
        app:layout_constraintRight_toRightOf="@+id/hero_image_view"
        app:layout_constraintTop_toTopOf="@+id/hero_image_view"
        />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Challenge Title"
        tools:visibility="visible"/>

</android.support.constraint.ConstraintLayout>